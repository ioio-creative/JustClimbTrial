<UserControl x:Class="JustClimbTrial.Views.UserControls.BoulderRockStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JustClimbTrial.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <!-- row 0 -->
        <Button x:Name="btnStartStatus" 
                Grid.Row="0" Grid.Column="0">
            START
        </Button>
        <Button x:Name="btnEndStatus" 
                Grid.Row="0" Grid.Column="1">
            END
        </Button>
        <!-- end of row 0 -->

        <!-- row 1 -->
        <Button x:Name="btnIntermediateStatus" 
                Grid.Row="1" Grid.Column="0">
            INT
        </Button>
        <Button x:Name="btnNoneStatus" 
                Grid.Row="1" Grid.Column="1">
            NONE
        </Button>
        <!-- end of row 1 -->
    </Grid>
</UserControl>
